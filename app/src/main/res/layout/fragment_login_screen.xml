<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginScreenFragment">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:id="@+id/material_text"
            android:layout_margin="10dp"
            app:cardCornerRadius="50dp"
            app:strokeColor="@color/purple_700"
            app:strokeWidth="1dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:background="@color/lightgrey"
                android:text="Welcome to the InternShip Program"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:padding="10dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/materialcard1"
            android:layout_below="@id/material_text"
            app:cardCornerRadius="40dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/internlogo" />
        </com.google.android.material.card.MaterialCardView>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/materialcard1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" />
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_below="@id/loginButton"
android:layout_margin="16dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="60dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_withgoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:padding="5dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/googlesmall"
        android:src="@drawable/google"
        android:text="Login  with google" />
</com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</layout>